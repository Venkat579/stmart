<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OptionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:title="Options"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder"
            android:layout_marginTop="25dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/purple_500"
            android:id="@+id/profileImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venna venkata reddy"
            android:fontFamily="@font/regular"
            android:textColor="#CC000000"
            android:id="@+id/username"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="208w1a0558@vrsec.ac.in"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/regular"
            android:textColor="#CC000000"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:id="@+id/email"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:textColor="@android:color/holo_red_light"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/btnViewAll"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile Image"
                    android:fontFamily="@font/regular"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:background="?selectableItemBackground"

                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:id="@+id/txtUpdateProfile"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c6c6c6"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Posts"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"                    android:fontFamily="@font/regular"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="?selectableItemBackground"

                    android:id="@+id/txtMyPosts"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c6c6c6"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About App"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"                    android:fontFamily="@font/regular"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="?selectableItemBackground"

                    android:id="@+id/txtAboutMyApp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c6c6c6"
                    android:layout_marginTop="2dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Care"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"                    android:fontFamily="@font/regular"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="?selectableItemBackground"

                    android:id="@+id/txtCustomer"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c6c6c6"
                    android:layout_marginTop="2dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"                    android:fontFamily="@font/regular"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:id="@+id/txtLogout"
                    android:background="?selectableItemBackground"
                    />




            </LinearLayout>









        </androidx.cardview.widget.CardView>












    </LinearLayout>

</RelativeLayout>