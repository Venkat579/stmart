<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/light_gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView_register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter your details to register"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/textView_register_head"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Card Image:"
                android:layout_marginTop="30dp"

                android:textColor="@android:color/holo_green_dark"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/no_profile_pic"
                android:adjustViewBounds="true"
                app:riv_corner_radius="5dp"
                android:id="@+id/adharImage"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Card Image:"
                android:layout_marginTop="10dp"

                android:textColor="@android:color/holo_green_dark"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/no_profile_pic"
                android:adjustViewBounds="true"
                app:riv_corner_radius="5dp"
                android:id="@+id/profileImage"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/textView_register_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/editText_register_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textView_register_full_name"
                    android:background="@drawable/border"
                    android:hint="Enter your full name"
                    android:inputType="textPersonName"
                    android:layout_marginStart="13dp"
                    android:layout_toEndOf="@+id/textView_register_full_name"
                    android:padding="6dp"
                    android:textSize="16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textView_register_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="Email :"
                    android:textColor="#555555"
                    android:textSize="18sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_register_email"
                    android:hint="Enter your Email id"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_alignBaseline="@id/textView_register_email"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/border"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textView_register_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="DOB :"
                    android:textColor="#555555"
                    android:textSize="18sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_register_dob"
                    android:hint="Select your date of birth(dd/mm/yyyy)"
                    android:inputType="date"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_alignBaseline="@id/textView_register_dob"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/border"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/textView_register_college_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="College id:"
                    android:textColor="#555555"
                    android:textSize="18sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_register_college_id"
                    android:hint="Enter your id card number"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_alignBaseline="@id/textView_register_college_id"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/border"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/textView_register_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Gender :"
                    android:textColor="#555555"
                    android:textSize="18sp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radio_group_register_gender"
                    android:layout_toEndOf="@+id/textView_register_gender"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radio_male"
                        android:text="Male"
                        android:layout_marginStart="20dp"
                        android:textSize="13sp"
                        android:textColor="#555555"/>
                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="13sp"
                        android:layout_marginStart="5dp"
                        android:textColor="#555555"/>

                    <RadioButton
                        android:id="@+id/radio_others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Others"
                        android:textColor="#555555"
                        android:textSize="13sp" />
                </RadioGroup>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_register_mobile"
                    android:text="Mobile :"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_register_mobile"
                    android:hint="Enter your mobile number"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_alignBaseline="@id/textView_register_mobile"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/border"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_register_password"
                    android:text="Password :"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:layout_marginTop="17dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_register_password"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_alignBaseline="@id/textView_register_password"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/border"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_register_confirm_password"
                    android:text="Cnf Pass :"
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:layout_marginTop="17dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_register_confirm_password"
                    android:hint="Re-enter your password"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_alignBaseline="@id/textView_register_confirm_password"
                    android:layout_marginLeft="105dp"
                    android:background="@drawable/border"/>

            </RelativeLayout>











        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="80dp"
            android:text="Register"
            app:cornerRadius="15dp"
            android:layout_below="@id/l1"
            app:backgroundTint="@android:color/holo_orange_dark" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"/>
    </RelativeLayout>
</ScrollView>